[flake8]
max-line-length = 100
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    .env,
    node_modules,
    .pytest_cache,
    .mypy_cache
ignore = 
    # E501: line too long (handled by black)
    E501,
    # W503: line break before binary operator (conflict with black)
    W503,
    # E203: whitespace before ':' (conflict with black)
    E203,
    # F401: imported but unused (handled by isort/IDE)
    F401
per-file-ignores =
    # __init__.py files can have unused imports
    __init__.py:F401
max-complexity = 10
docstring-convention = google
