# Connect++ (CPP) Environment Variables

# Application
APP_NAME="Connect++ CPP"
APP_PORT=8080
APP_VERSION=1.0.0

# Database
DATABASE_URL=postgresql://cppuser:cpppass@localhost:5433/cppdb

# Redis
REDIS_URL=redis://localhost:6380/0

# Security
JWT_SECRET=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=480

# CORS
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# WebSocket
WS_PING_INTERVAL=30
WS_PING_TIMEOUT=10

# Device Settings
DEVICE_MODE=production
ENABLE_OFFLINE_MODE=true
SYNC_INTERVAL=300

# Sensor Configuration
PRESSURE_LOW_MIN=-20.0
PRESSURE_LOW_MAX=0.0
PRESSURE_MEDIUM_MIN=0.0
PRESSURE_MEDIUM_MAX=50.0
PRESSURE_HIGH_MIN=0.0
PRESSURE_HIGH_MAX=300.0
